<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".TicleApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppCompat"
        tools:targetApi="31">
        <activity
            android:name=".presentation.home.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppCompat"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".presentation.detail.DetailActivity" />

        <activity android:name=".presentation.income.IncomeActivity" />
        <activity
            android:name=".presentation.incomeinput.IncomeInputActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity android:name=".presentation.spending.SpendingActivity" />
        <activity
            android:name=".presentation.spendinginput.SpendingInputActivity"
            android:windowSoftInputMode="adjustResize" />

    </application>

</manifest>